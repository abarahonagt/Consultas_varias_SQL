
--- EJEMPLO DE WHERE
SELECT * 
    FROM HR.employees
WHERE JOB_ID = 'IT_PROG';

-- = IGUAL  > MAYOR < MENOR >= MAYOR IGUAL <= MENOR IGUAL <> != DISTINTO
SELECT * 
    FROM HR.employees
WHERE SALARY >= 10000;

-- AND   OR
SELECT * 
    FROM HR.employees
WHERE JOB_ID = 'IT_PROG' AND SALARY > 8000;

-- AND   OR
SELECT * 
    FROM HR.employees
WHERE JOB_ID = 'IT_PROG' AND SALARY > 4500 AND HIRE_DATE > TO_DATE('31/12/2005','DD/MM/YYYY')

SELECT * 
    FROM HR.employees
WHERE JOB_ID = 'IT_PROG' OR JOB_ID  = 'FI_ACCOUNT' OR SALARY > 10000;


SELECT * 
    FROM HR.employees
WHERE (JOB_ID = 'IT_PROG' OR JOB_ID  = 'FI_ACCOUNT') 
    AND SALARY > 5000;
    
--- EJEMPLO IN 
SELECT * 
    FROM HR.employees
WHERE JOB_ID IN ('IT_PROG','FI_ACCOUNT','ST_MAN')

--- EJEMPLO NOT IN 
SELECT * 
    FROM HR.employees
WHERE JOB_ID NOT IN ('IT_PROG','FI_ACCOUNT','ST_MAN')
AND SALARY > 8000
AND HIRE_DATE >= TO_DATE('01/01/2006','DD/MM/YYYY');

-- ORDER BY
SELECT * FROM HR.employees
ORDER BY FIRST_NAME ASC; 

-- ASC ASCENDENTE A - Z      1 - 10
-- DESC DESCENDENTE Z - A    10 - 1

-- ORDER BY
SELECT * FROM HR.employees
ORDER BY SALARY DESC, FIRST_NAME; 


-- SUM 
    
SELECT SUM(SALARY)  
    FROM HR.employees
    WHERE SALARY > 10000;
        
SELECT *
    FROM HR.employees
    WHERE SALARY > 10000;

SELECT SUM(SALARY) AS SALARIO, JOB_ID
    FROM HR.employees
    GROUP BY JOB_ID
    ORDER BY SALARIO;
    
-- COUNT

SELECT COUNT(*) AS NO_EMPLEADOS, JOB_ID
    FROM HR.employees
    WHERE SALARY > 8000        
    GROUP BY JOB_ID
    ORDER BY NO_EMPLEADOS DESC
    
   SELECT COUNT(*) 
   FROM HR.employees
   WHERE;
   GROUP 
   
   



    
    



